---
layout: base
---
<article class="post">
  <header class="post__header">
    <h2 class="post__title">{{ title }}</h2>
    {% if description %}
    <p class="post__meta">{{ description}}</p>
    {% endif %}
  </header><!-- .post__header -->
  {% if content %}
  <div class="post__content">
    {{ content }}
  </div><!-- .post__content -->
  {% endif %}
</article><!-- .post -->

{%- if collections.articles %}
<section class="more-content">
  {%- for post in collections.pages %}
  {%- if post.data.slug == 'articles' %}
  <h3>{{ post.data.title }}</h3>
  <p class="post__meta">{{ post.data.description }}</p>
  {%- endif %}
  {%- endfor %}
  <ul class="posts">
    {%- for article in collections.articles %}
    <li class="post"><a href="/articles/{{ article.slug }}">{{ article.title }}</a></li>
    {%- endfor %}
  </ul>
</section>
{%- endif %}

{%- if collections.projects %}
<section class="more-content">
  {%- for post in collections.pages %}
  {%- if post.data.slug == 'portfolio' %}
  <h3>{{ post.data.title }}</h3>
