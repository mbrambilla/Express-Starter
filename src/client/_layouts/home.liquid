    <li class="post"><a href="/portfolio/{{ project.slug }}">{{ project.title }}</a></li>
    {%- endfor %}
  </ul>
</section>
{%- endif %}

{%- if collections.testimonials %}
<section class="more-content">
  {%- for post in collections.pages %}
  {%- if post.data.slug == 'testimonials' %}
  <h3>{{ post.data.title }}</h3>
  <p class="post__meta">{{ post.data.description }}</p>
  {%- endif %}
  {%- endfor %}
  <ul class="posts">
    {%- for testimonial in collections.testimonials %}
